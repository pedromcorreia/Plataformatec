<h1 class="title has-text-left">
  <u>@<%= concatenate_name(@user.name) %></u>
</h1>

<div class="columns is-multiline">

  <%= for list <- @lists do %>

    <div class="column is-one-third">
      <a href="<%= show_list(list) %>">
        <div class="box">
          <label class="label"><%= list.title %></label>
          <label class="label"><%= difference_date(list) %> - <%= list.goals_total %>/<%= list.goals_done %> tasks</label>
        </div>
      </a>
    </div>
  <% end %>

</div>

