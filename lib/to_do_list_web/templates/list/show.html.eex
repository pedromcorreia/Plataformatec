<h1 class="title has-text-left">
  <u><%= @list.title %></u>
</h1>
<h2 class="subtitle has-text-left">
  by @<%= concatenate_name(@user.name) %> - Created
  <%= Timex.diff(Timex.now, @list.inserted_at, :hours) %>
  hours ago
</h2>

<%= form_for @conn, goal_path(@conn, :create), [as: :goal],fn f -> %>

  <div class="field">
    <label class="label">Breakdown time! Type the task name and hit enter.</label>
    <%= text_input f, :description, class: "input" %>
    <%= error_tag f, :description %>
  </div>

  <%= hidden_input f, :list_id, class: "input", value: @list.id %>
<% end %>

<table class="table is-fullwidth">
  <tbody>
    <%= for goal <- @goals do %>

      <%= form_for @conn, goal_path(@conn, :update, goal),fn f -> %>
         <td><input type="checkbox" id="<%= goal.id %>" class="todolistcheckbox"/></td>
        <%= submit "Submit", class: "checkbox" %>
       <% end %>
      <td><%= label :description, goal.description, class: "label" %></td>
      <td><%= link "Edit", to: goal_path(@conn, :edit, goal), class: "btn btn-default btn-xs" %></td>
      <td><%= button "x", to: goal_path(@conn, :delete, goal), method: :delete, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


